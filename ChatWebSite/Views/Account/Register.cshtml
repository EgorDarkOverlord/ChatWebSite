@{
    ViewData["Title"] = "Регистрация";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}
<div class="d-grid grid-template-columns-1fr-1fr">
    <div class="p-5">
        <div class="Form m-auto p-4 box-shadow">
            <form asp-antiforgery="true" asp-action="Register" asp-controller="Account" method="post">
                <div class="FlexForm">
                    <div>
                        <input type="text" class="TextInput" placeholder="Эл. почта" name="email" />
                    </div>
                    <div class="pt-4">
                        <input type="text" class="TextInput" placeholder="Имя" name="name" />
                    </div>
                    <div class="pt-4">
                        <input type="text" class="TextInput" placeholder="Логин" name="login" />
                    </div>
                    <div class="pt-4">
                        <input type="password" class="TextInput" placeholder="Пароль" name="password" />
                    </div>
                    <div class="pt-4">
                        <input type="password" class="TextInput" placeholder="Подтвердите пароль" name="confirmPassword" />
                    </div>
                    <div class="pt-4">
                        <input type="submit" class="Button" value="Зарегистрироваться" />
                    </div>
                    <div class="pt-1">
                        <a href="/Account/Login">Назад</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="p-5">
        <p>ChatWebSite - это платформа для общения. Находите здесь друзей и общайтесь с ними</p>
    </div>
</div>
